# ========================================
# APPLICATION CONFIGURATION
# ========================================
NEXT_PUBLIC_APP_NAME="Co Housing Ventures"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# ========================================
# SUPABASE CONFIGURATION
# ========================================
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL="https://your-project-id.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# ========================================
# DATABASE
# ========================================
# Direct database connection (optional, for migrations)
DATABASE_URL="postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres"

# ========================================
# AUTHENTICATION
# ========================================
# JWT Secret for session management
JWT_SECRET="your-jwt-secret-minimum-32-characters-long"
NEXT_PUBLIC_AUTH_REDIRECT_URL="http://localhost:3000/auth/callback"

# ========================================
# EMAIL SERVICE
# ========================================
# SendGrid Configuration
SENDGRID_API_KEY="SG.your-sendgrid-api-key"
EMAIL_FROM="noreply@cohousingventures.com"
EMAIL_FROM_NAME="Co Housing Ventures"

# OR Resend Configuration (alternative)
# RESEND_API_KEY="re_your-resend-api-key"

# SMTP Configuration (alternative)
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT="587"
SMTP_USER="apikey"
SMTP_PASS="your-sendgrid-api-key"

# ========================================
# ANALYTICS & MONITORING
# ========================================
# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Hotjar
NEXT_PUBLIC_HOTJAR_ID=""
NEXT_PUBLIC_HOTJAR_VERSION="6"

# Sentry Error Monitoring
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"
SENTRY_ORG="your-org"
SENTRY_PROJECT="co-housing-ventures"

# ========================================
# EXTERNAL SERVICES
# ========================================
# Google Maps API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"

# Cloudflare CDN
NEXT_PUBLIC_CDN_URL="https://cdn.cohousingventures.com"

# ========================================
# STORAGE
# ========================================
# Supabase Storage bucket names
NEXT_PUBLIC_STORAGE_BUCKET_PROPERTIES="properties"
NEXT_PUBLIC_STORAGE_BUCKET_AVATARS="avatars"
NEXT_PUBLIC_STORAGE_BUCKET_BLOG="blog-images"

# ========================================
# FEATURE FLAGS
# ========================================
NEXT_PUBLIC_ENABLE_BLOG="true"
NEXT_PUBLIC_ENABLE_COHOUSING="true"
NEXT_PUBLIC_ENABLE_PAYMENT="false"
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN="true"
NEXT_PUBLIC_MAINTENANCE_MODE="false"

# ========================================
# API CONFIGURATION
# ========================================
# Rate Limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="60000"

# API Keys for internal services
API_SECRET_KEY="your-internal-api-secret-key"

# ========================================
# SECURITY
# ========================================
# Encryption key for sensitive data
ENCRYPTION_KEY="your-encryption-key-minimum-32-characters"

# CORS allowed origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,https://cohousingventures.com"

# ========================================
# DEVELOPMENT TOOLS
# ========================================
# Enable debug mode
NEXT_PUBLIC_ENABLE_DEBUG="false"

# API Mock Mode (use mock data instead of real API)
NEXT_PUBLIC_MOCK_API="false"
